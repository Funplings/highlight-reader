  {
    "name": "Highlight Reader",
    "version": "1.0",
    "description": "Very cool!",
    "background": {
	    "scripts": [
	    	"background.js"
	    ],
	    "persistent": false
	  },
	"permissions": [
		"contextMenus",
		"storage",
		"tts",
		"tabs",
		"http://*/",
        "https://*/"
	],
	"browser_action": {
		"default_popup": "popup.html"
	},

	"commands": {
		"toggle-speaking": {
		  "suggested_key": {
			"default": "Alt+S",
			"mac": "Alt+S"
		  },
		  "description": "Toggle speaking"
		}
	},
	"icons": { "16": "icon-16px.png",
		"48": "icon-48px.png",
	   "128": "icon-128px.png" },
    "manifest_version": 2
  }